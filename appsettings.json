{
  "ConnectionStrings": {
    "DefaultConnection": "ConnectionString__DefaultConnection"
  },
  "AllowedHosts": "*",
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://0.0.0.0:8080"
      }
    },
    "Limits": {
      "MaxRequestBodySize": 52428800
    }
  },
  "Jwt": {
    "Key": "Jwt__Key",
    "Issuer": "Jwt__Issuer",
    "Audience": "Jwt__YourAudience"
  },

  "SendGridConfig": {
    "ApiKey": "SendGridConfig__ApiKey",
    "SenderEmail": "SendGridConfig__SenderEmail"
  },

  "RedisConfig": {
    "Host": "localhost",
    "Port": 6379
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}
